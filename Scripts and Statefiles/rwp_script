#!/bin/bash
PARAVIEW_BIN='/home/karran/paraview_super_build/install/bin/pvpython'
SCRIPT_STATEFILE_FOLDER='/home/karran/SciVis/RWP/Codebase/Resubmission Files/'
DATA_FOLDER='/home/karran/SciVis/RWP/Data/Path Ranking Tests/'
RESULT_FOLDER='/home/karran/SciVis/RWP/Results/New Scripts Test/'
DATA_SCRIPT='data_script.py'
CLUSTER_MAX_SCRIPT='cluster_max_final.py'
CLUSTER_MIN_SCRIPT='cluster_min_final.py'
MAX_MIN_ASSOC_SCRIPT='assoc_lines_graph_dump.py'
FILE_NAME='souders_v_2.nc'

$PARAVIEW_BIN "$SCRIPT_STATEFILE_FOLDER$DATA_SCRIPT" "$DATA_FOLDER/$FILE_NAME" "$RESULT_FOLDER" "$SCRIPT_STATEFILE_FOLDER"

$PARAVIEW_BIN "$SCRIPT_STATEFILE_FOLDER$CLUSTER_MAX_SCRIPT" "$RESULT_FOLDER$FILE_NAME/" "$SCRIPT_STATEFILE_FOLDER" &
$PARAVIEW_BIN "$SCRIPT_STATEFILE_FOLDER$CLUSTER_MIN_SCRIPT" "$RESULT_FOLDER$FILE_NAME/" "$SCRIPT_STATEFILE_FOLDER" &
wait

$PARAVIEW_BIN "$SCRIPT_STATEFILE_FOLDER$MAX_MIN_ASSOC_SCRIPT" "$RESULT_FOLDER$FILE_NAME/" "$SCRIPT_STATEFILE_FOLDER"


